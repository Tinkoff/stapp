{
  "root": "./docs",
  "plugins": [
    "-sharing",
    "my-toolbar"
  ],
  "pluginsConfig": {
    "my-toolbar": {
      "buttons":
      [
        {
          "label": "GitHub",
          "text": " ",
          "icon": "fa fa-github",
          "url": "https://github.com/TinkoffCreditSystems/stapp/"
        },
        {
          "label": "Share link on Facebook",
          "text": " ",
          "icon": "fa fa-facebook",
          "url": "http://www.facebook.com/sharer/sharer.php?s=100&p[url]={{url}}"
        },
        {
          "label": "Share link on Twitter",
          "text": " ",
          "icon": "fa fa-twitter",
          "url": "http://twitter.com/share?text=Stapp:%20modular%20state%20and%20side-effects%20manager&url=https://stapp.js.org/&hashtags=stapp"
        },
        {
          "label": "Edit this page on github",
          "text":"Edit this page",
          "icon": "fa fa-pencil-square-o",
          "position" : "left",
          "url": "https://github.com/TinkoffCreditSystems/stapp/blob/master/docs/{{filepath_lang}}"
        }
      ]
    }
  }
}
