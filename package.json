{
  "name": "stapp",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test && npm run test:size",
    "test:size": "size-limit",
    "docs": "rimraf _book npm run docs:toc && npm run docs:move && npm run docs:book && npm run docs:publish",
    "docs:toc": "doctoc docs/README.md docs/guides/. docs/core/. docs/modules/. --notitle --github",
    "docs:move": "cp README.md ./docs",
    "docs:book": "gitbook install && gitbook build",
    "docs:publish": "gh-pages -d _book",
    "pretest": "npm run build",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "prepush": "npm run build",
    "preversion": "npm run build"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write --config .prettierrc",
      "git add"
    ],
    "./README.md": [
      "doctoc --notitle --github --maxlevel 3",
      "git add"
    ]
  },
  "devDependencies": {
    "cash-cp": "^0.2.0",
    "cash-mv": "^0.2.0",
    "commitizen": "^2.10.1",
    "doctoc": "^1.3.1",
    "gh-pages": "^1.2.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "size-limit": "^0.18.2",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
