{
  "name": "stapp",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test && npm run test:size",
    "test:size": "size-limit",
    "docs": "npm run docs:toc && npm run docs:api && npm run docs:move && npm run docs:book && npm run docs:publish",
    "docs:toc": "doctoc docs/README.md docs/usage/. docs/api/. docs/modules/. --notitle --github",
    "docs:api": "typedoc packages --options typedoc.json --out .tempdocs",
    "docs:move": "mv .tempdocs/README.md docs/types.md && rimraf .tempdocs && cp docs/README.md README.md && git add README.md docs",
    "docs:book": "gitbook build",
    "docs:publish": "gh-pages -d _book",
    "postbuild": "npm run test",
    "cz": "git-cz",
    "prepush": "npm run build",
    "preversion": "npm run build && npm run docs"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  },
  "size-limit": [
    {
      "name": "core",
      "path": "packages/stapp/lib/stapp.js"
    },
    {
      "name": "bindings: react",
      "path": "packages/react/lib/index.js"
    },
    {
      "name": "modules: persist",
      "path": "packages/persist/lib/index.js"
    },
    {
      "name": "modules: formBase",
      "path": "packages/formBase/lib/index.js"
    },
    {
      "name": "modules: loaders",
      "path": "packages/loaders/lib/index.js"
    },
    {
      "name": "modules: validate",
      "path": "packages/validate/lib/index.js"
    }
  ],
  "devDependencies": {
    "cash-cp": "^0.2.0",
    "cash-mv": "^0.2.0",
    "commitizen": "^2.10.1",
    "doctoc": "^1.3.1",
    "gh-pages": "^1.2.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "size-limit": "^0.18.2",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.13",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
