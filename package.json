{
  "name": "stapp",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test && npm run ",
    "test:size": "size-limit",
    "docs": "npm run docs:toc && npm run docs:api && npm run docs:move && npm run docs:book && npm run docs:publish",
    "docs:toc": "doctoc docs/README.md docs/usage/. docs/api/. docs/modules/. --notitle --github",
    "docs:api": "typedoc packages --options typedoc.json --out .tempdocs",
    "docs:move": "mv .tempdocs/README.md docs/types.md && rimraf .tempdocs && cp docs/README.md README.md && git add README.md docs",
    "docs:book": "gitbook build",
    "docs:publish": "gh-pages -d _book",
    "postbuild": "npm run test",
    "cz": "git-cz",
    "prepush": "npm run build"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  },
  "size-limit": [
    {
      "name": "core",
      "path": "packages/stapp/lib/stapp.js"
    },
    {
      "name": "modules: persist",
      "path": "packages/stapp/lib/modules/persist/index.js"
    },
    {
      "name": "modules: formBase",
      "path": "packages/stapp/lib/modules/formBase/index.js"
    },
    {
      "name": "modules: loaders",
      "path": "packages/stapp/lib/modules/loaders/index.js"
    },
    {
      "name": "modules: validate",
      "path": "packages/stapp/lib/modules/validate/index.js"
    },
    {
      "name": "react bindings",
      "path": "packages/stapp/lib/react/index.js"
    }
  ],
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.6",
    "@types/react-dom": "^16.0.4",
    "cash-cp": "^0.2.0",
    "cash-mv": "^0.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "doctoc": "^1.3.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "fbjs": "^0.8.16",
    "flux-standard-action": "^2.0.1",
    "gh-pages": "^1.1.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "redux": "^3.7.2",
    "request": "^2.85.0",
    "reselect": "^3.0.1",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.8",
    "rxjs-marbles": "^2.3.3",
    "size-limit": "^0.18.2",
    "ts-jest": "^22.4.2",
    "ts-node": "^6.1.1",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.5.1",
    "type-coverage": "^1.0.8",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.0",
    "typescript": "^2.8.1",
    "webpack": "^4.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
