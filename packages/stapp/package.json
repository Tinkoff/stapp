{
  "name": "stapp",
  "version": "2.0.0-0",
  "description": "Modular state manager for microapps",
  "keywords": [
    "state-management",
    "state",
    "reactive",
    "microservice",
    "epics",
    "redux"
  ],
  "main": "lib/stapp.js",
  "typings": "lib/stapp.d.ts",
  "files": [
    "lib"
  ],
  "author": "Dmitry Korolev <dmitry@korolev.dk> (https://korolev.dk)",
  "repository": {
    "type": "git",
    "url": "https://github.com/TinkoffCreditSystems/stapp/"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:module && npm run build:bundle",
    "build:module": "tsc",
    "prebuild": "rimraf lib",
    "test": "npm run test:lint && npm run test:jest && npm run test:type",
    "test:lint": "tslint -t verbose './src/**/*.ts' './src/**/*.tsx' -p ./tsconfig.json -c ./tslint.json",
    "test:jest": "jest --runInBand"
  },
  "jest": {
    "transform": {
      ".(ts|tsx|js|jsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test|spec/",
      "/examples/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "globals": {
      "process.env.NODE_ENV": "test"
    }
  },
  "peerDependencies": {
    "redux": ">=3 <4"
  },
  "dependencies": {
    "light-observable": "^2.0.0",
    "symbol-observable": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "flux-standard-action": "^2.0.1",
    "jest": "^23.1.0",
    "redux": "^4.0.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^6.1.1",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1"
  }
}
