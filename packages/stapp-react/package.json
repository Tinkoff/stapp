{
  "name": "stapp-react",
  "version": "1.3.1",
  "description": "React bindings for stapp - modular state manager",
  "keywords": [
    "state-management",
    "stapp",
    "state",
    "reactive",
    "microservice",
    "epics",
    "redux",
    "react"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Dmitry Korolev <dmitry@korolev.dk> (https://korolev.dk)",
  "repository": {
    "type": "git",
    "url": "https://github.com/TinkoffCreditSystems/stapp/"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:module",
    "build:module": "tsc",
    "prebuild": "rimraf lib",
    "test": "npm run test:lint && npm run test:jest",
    "test:lint": "tslint -t verbose './src/**/*.ts' './src/**/*.tsx' -p ./tsconfig.json -c ./tslint.json",
    "test:jest": "jest --runInBand"
  },
  "jest": {
    "transform": {
      ".(ts|tsx|js|jsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test|spec/",
      "/examples/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/testSetup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "globals": {
      "process.env.NODE_ENV": "test"
    }
  },
  "peerDependencies": {
    "fbjs": ">=0.8",
    "prop-types": ">=15.6",
    "react": ">=15",
    "stapp": ">=2",
    "stapp-formBase": ">=1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.6",
    "@types/react-dom": "^16.0.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "fbjs": "^0.8.16",
    "flux-standard-action": "^2.0.1",
    "jest": "^23.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "redux": "^3.7.2",
    "request": "^2.85.0",
    "reselect": "^3.0.1",
    "rxjs": "^5.5.8",
    "rxjs-marbles": "^2.3.3",
    "size-limit": "^0.18.2",
    "stapp": "^2.0.0-0",
    "stapp-formBase": "^2.0.0-0",
    "ts-jest": "^22.4.2",
    "ts-node": "^6.1.1",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1"
  }
}
