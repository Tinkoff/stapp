{
  "name": "stapp-react",
  "version": "2.6.0-2",
  "description": "React bindings for stapp - modular state manager",
  "keywords": [
    "state-management",
    "stapp",
    "state",
    "reactive",
    "microservice",
    "epics",
    "redux",
    "react"
